                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="85*" />
                                    <!-- 间隔 -->
                                    <ColumnDefinition Width="35*" />
                                    <!-- 按钮 -->
                                    <ColumnDefinition Width="35*" />
                                    <!-- 间隔 -->
                                    <ColumnDefinition Width="655*" />
                                    <!-- 滑动条 -->
                                    <ColumnDefinition Width="50*" />
                                    <!-- 间隔 -->
